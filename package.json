{
  "name": "corevo",
  "version": "1.0.0",
  "private": true,
  "description": "Corevo - Salon Management OS (Multi-tenant SaaS)",
  "workspaces": [
    "apps/*",
    "backend/*",
    "infra/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:functions": "npm run dev --workspace=backend/functions",
    "build:web": "npm run build --workspace=apps/web",
    "build:functions": "npm run build --workspace=backend/functions",
    "build": "npm run build:web && npm run build:functions",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "seed": "node infra/scripts/seed-tenant.js",
    "provision": "node infra/scripts/provision-tenant.js",
    "gen-demo": "node infra/scripts/gen-demo-data.js",
    "emulator": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "emulator:seed": "node infra/scripts/seed-emulator.js",
    "emulator:copy-prod": "node scripts/copy-prod-to-emulator.js && node scripts/reset-users-with-password.js",
    "emulator:list-users": "node scripts/list-users.js",
    "emulator:clear": "rm -rf emulator-data && echo 'Emulator data cleared'",
    "clean": "rm -rf apps/web/.next backend/functions/lib emulator-data *-debug.log && echo 'Project cleaned'",
    "clean:all": "npm run clean && rm -rf node_modules apps/web/node_modules backend/functions/node_modules && echo 'Full clean completed'"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "salon",
    "management",
    "saas",
    "multi-tenant",
    "firebase",
    "next.js"
  ],
  "author": "Corevo Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "googleapis": "^164.1.0"
  }
}
