# ============================================
# Corevo Environment Variables Template
# ============================================
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# --------------------------------------------
# Next.js Web App (Vercel)
# --------------------------------------------

# Firebase Web SDK Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Stripe Public Key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Application Environment (dev|staging|prod)
NEXT_PUBLIC_APP_ENV=dev

# --------------------------------------------
# Firebase Functions (Backend)
# Set via: firebase functions:config:set
# --------------------------------------------

# Stripe Secret Key
STRIPE_SECRET_KEY=

# Web App Base URL (for redirects, emails)
WEBAPP_URL=http://localhost:3000

# SendGrid API Key (for transactional emails)
SENDGRID_API_KEY=

# OR Gmail App Password (alternative to SendGrid)
GMAIL_APP_PASSWORD=
GMAIL_USER=

# Claude API Key (for AI suggestions and insights)
CLAUDE_API_KEY=

# LINE Official Account (future use)
LINE_CHANNEL_SECRET=
LINE_CHANNEL_ACCESS_TOKEN=

# --------------------------------------------
# Firebase Admin SDK (for scripts)
# --------------------------------------------

# Path to service account JSON (for local development/scripts)
# FIREBASE_SERVICE_ACCOUNT=./service-account-key.json

# --------------------------------------------
# Optional: External Integrations
# --------------------------------------------

# Google Calendar API (future integration)
# GOOGLE_CALENDAR_API_KEY=

# SMS Provider (future integration)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=
