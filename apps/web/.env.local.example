# Firebase Web SDK Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Stripe Public Key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_placeholder

# Application Environment
# dev = Firebase Emulator (ローカル開発用)
# production = 本番Firebase
NEXT_PUBLIC_APP_ENV=dev

# Web App URL
WEBAPP_URL=http://localhost:3005
NEXT_PUBLIC_APP_URL=http://localhost:3006

# Google Calendar API (OAuth 2.0)
# Google Cloud Consoleで取得
# 取得方法: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_CALENDAR_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your_client_secret

# Firebase Admin SDK (サーバーサイド用)
# Firebase Console → プロジェクト設定 → サービスアカウント → 秘密鍵を生成
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"
